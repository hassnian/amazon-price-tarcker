{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true
    },
    "extends": [
        "airbnb-base"
    ],
    "globals": {
        "Atomics": "readonly",
        "SharedArrayBuffer": "readonly"
    },
    "parserOptions": {
        "ecmaVersion": 2018
    },
    "rules": {
        "camelcase": "off",
        "indent": ["error", "tab"],
        "no-tabs": "off",
        "class-methods-use-this": "off",
        "max-line-length": false,
        "import-name": false,
        "ter-arrow-parens": false,
        "variable-name": false
    }
}
